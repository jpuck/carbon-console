#!/usr/bin/env php
<?php

namespace jpuck\TimeConverter;

if(file_exists(__DIR__.'/../../../autoload.php')){
    require_once __DIR__.'/../../../autoload.php';
} else {
    require_once __DIR__.'/../vendor/autoload.php';
}

use Symfony\Component\Console\Application;

$logo = '
  _   _                                                _
 | |_(_)_ __ ___   ___    ___ ___  _ ____   _____ _ __| |_ ___ _ __
 | __| | \'_ ` _ \\ / _ \\  / __/ _ \\| \'_ \\ \\ / / _ \\ \'__| __/ _ \\ \'__|
 | |_| | | | | | |  __/ | (_| (_) | | | \\ V /  __/ |  | ||  __/ |
  \\__|_|_| |_| |_|\\___|  \\___\\___/|_| |_|\\_/ \\___|_|   \\__\\___|_|

';

// ASCII art logo:
// http://www.patorjk.com/software/taag/#p=display&f=Ivrit&t=time%20converter

$version = $version ?? 'dev';

$app = new Application($logo, $version);

$app->run();
